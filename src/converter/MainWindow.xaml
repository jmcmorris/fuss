<Window x:Class="converter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="FUSS" Height="102" Width="254">
    <Grid>
        <Button x:Name="convertButton" Content="Make a Fuss" Margin="8" IsDefault="True" Click="convertClick"/>
        <Grid Margin="8" x:Name="progressGrid" Visibility="Hidden">
            <ProgressBar x:Name="progressBar" Minimum="0" Maximum="1" HorizontalAlignment="Stretch" IsIndeterminate="True" />
            <TextBlock x:Name="progressText" HorizontalAlignment="Center" VerticalAlignment="Center">Fussing...</TextBlock>
        </Grid>
    </Grid>
</Window>
